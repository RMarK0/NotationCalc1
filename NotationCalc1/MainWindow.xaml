        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700"
        ResizeMode="CanMinimize">
    <Grid Name="Grid">
        <ComboBox HorizontalAlignment="Left" Margin="537,269,0,0" VerticalAlignment="Top" Width="142" Name="SourceNotation1ComboBox">
            <TextBlock>2</TextBlock>
